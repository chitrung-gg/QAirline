    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run backend (pnpm start)",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "pnpm",
            "args": [
                "run",
                "--prefix",
                "./backend/qairline",
                "start"
            ],
            "env": {
                "NODE_ENV": "development"  // Optional: set any environment variables
            },
            "timeout": 10000,  // Optional: increase timeout if the startup takes time
            "console": "integratedTerminal"
        },
    ]
}